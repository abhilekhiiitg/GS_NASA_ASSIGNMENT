<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small_margin"
    android:layout_marginTop="@dimen/small_margin"
    android:layout_marginRight="@dimen/smaller_margin"
    android:layout_marginBottom="@dimen/smaller_margin">

    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/shimmer_size"
        android:layout_height="@dimen/shimmer_size"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view3"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="@dimen/shimmer_placeholder_size"
        android:layout_height="@dimen/small_margin"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/background"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintLeft_toRightOf="@+id/view1" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="@dimen/margin_32"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/background"
        app:layout_constraintLeft_toRightOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/background"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

</androidx.constraintlayout.widget.ConstraintLayout>